<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:lines="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora de Recordatorio"
            android:layout_marginTop="16dp"/>

        <!-- Spinner para seleccionar el estado -->
        <Spinner
            android:id="@+id/spinner_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/estados_nota"
            android:layout_marginTop="16dp"/>

        <!-- Spinner para seleccionar la categoría -->
        <Spinner
            android:id="@+id/spinner_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/categorias_nota"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_guardar_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Nota"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>