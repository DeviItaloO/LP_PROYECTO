<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:backgroundTint="@color/white">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="@dimen/tamano_logo_width"
        android:layout_height="@dimen/tamano_logo_height"
        android:src="@drawable/nota"/>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_titulo"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/tamano_titulo"
        android:layout_marginTop="@dimen/espacio_titulo"/>

    <EditText
        android:id="@+id/et_login_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/login_correo"
        android:layout_marginTop="@dimen/espacio_correo"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/et_login_contrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_contraseÃ±a"
        android:layout_marginTop="@dimen/espacio_contrasenia"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/espacio_botones">

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="@dimen/tamano_boton_registrar"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_registrar"
            android:text="@string/txt_registrar" />

        <Space
            android:layout_width="@dimen/espacio"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_Login"
            android:layout_width="@dimen/tamano_boton_login"
            android:backgroundTint="@color/color_login"
            android:layout_height="wrap_content"
            android:text="@string/txt_login"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/tamano_texto"
        android:text="@string/txt_texto"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/espacio_redes"
        android:gravity="center">

        <ImageView
            android:id="@+id/login_logo_google"
            android:layout_width="@dimen/tamano_imagen_width"
            android:layout_height="@dimen/tamano_imagen_height"
            android:src="@drawable/google"/>

        <Space
            android:layout_width="@dimen/espacio_2"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/login_logo_facebook"
            android:layout_width="@dimen/tamano_imagen_width"
            android:layout_height="@dimen/tamano_imagen_height"
            android:src="@drawable/facebook"/>

        <Space
            android:layout_width="@dimen/espacio_2"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/login_logo_social"
            android:layout_width="@dimen/tamano_imagen_width"
            android:layout_height="@dimen/tamano_imagen_height"
            android:src="@drawable/social"/>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>